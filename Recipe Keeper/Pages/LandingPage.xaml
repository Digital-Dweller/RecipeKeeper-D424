<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recipe_Keeper.Pages.LandingPage"
             Title="LandingPage"
             NavigationPage.HasNavigationBar="False">
    <Grid BackgroundColor="#fdf9f3">
        <VerticalStackLayout VerticalOptions="Center">
            <Image
                Source="logo.png"
                WidthRequest="150"
                HeightRequest="150"
                HorizontalOptions="Center"
                Margin="0,0,0,0"/>
            <Label
                Text="Recipe Keeper"
                FontSize="36"
                TextColor="#9E3F41"
                HorizontalOptions="Center"
                Margin="0,0,0,100"/>
            <Button
                Text="Create Profile"
                Clicked="onClick_CreateProfile"
                FontSize="20"
                TextColor="Black"
                BackgroundColor="White"
                BorderWidth="1"
                BorderColor="Black"
                HorizontalOptions="Center"
                Margin="0,0,0,160"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>