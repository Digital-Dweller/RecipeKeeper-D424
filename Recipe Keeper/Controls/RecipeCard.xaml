<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recipe_Keeper.Controls.RecipeCard">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Margin="10,10,20,10" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
            <Image x:Name="RecipeImage" Source="{Binding ImageSourceBinding}"/>
        </Border>
        <Label Text="{Binding TitleBinding}" Grid.Column="1" Grid.Row="0"/>
        <ImageButton Source="{Binding FavoriteImageBinding}" Command="{Binding FavoriteCommandBinding}" Grid.Column="2" Grid.Row="0"/>
        <Label Text="{Binding DescriptionBinding}" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>
</ContentView>