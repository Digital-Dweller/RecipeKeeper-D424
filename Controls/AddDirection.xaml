<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recipe_Keeper.Controls.AddDirection">
    <VerticalStackLayout Margin="10,0,10,5">
        <Label x:Name="direction_Title" Text="{Binding directionTitle}"/>
        <HorizontalStackLayout>
            <Border WidthRequest="230">
                <Label x:Name="direction_Description" Text="{Binding directionDescription}" BackgroundColor="White" Margin="5,5,5,5"/>
            </Border>
            <ImageButton Source="delete.svg" Command="{Binding deleteBinding}" Margin="5,0,0,0"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
